<h2>Template Administration</h2>

<table class="table table-striped table-bordered table-condensed">
  <caption class="sr-only">Available Templates</caption>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Set</th>
    </tr>
  </thead>

  <tbody>
    <% for template in @templates %>
      <tr>
        <td>
          <a href="<%= edit_template_path(template.id) %>">
            <span class="sr-only">Edit</span>
            <%= template.name %>
          </a>
        </td>
        <td><%= template.set %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create new template", new_template_path %>
