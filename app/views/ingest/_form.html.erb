<div id="ingest-form-container">
  <%= ingest_form_for(@form) do |f| %>
    <div class="ingest-tips">
      <h3>Tips:</h3>
      <ul>
        <li>All items must have a title.</li>
        <li>Check the box next to a field to save metadata for next record.</li>
        <li>Template usage requires all template fields to have content.</li>
        <li>View the <a href="https://docs.google.com/spreadsheets/d/1nnJz49oqstQLF2PFBn5ZvWfWdF-8PVl5TFL1EMotQrA/edit?usp=sharing">Metadata Dictionary</a>.</li>
      </ul>
    </div>

    <%= form_errors(f) %>
    <%= render "file_upload_field", :asset => @form.asset, :upload => @form.upload, :f => f %>
    <%= render "internal_group_fields", :form => @form.form, :f => f %>
    <%= render "raw_statements", :form => @form %>
    <%= form_submit(f) %>
  <% end %>
</div>

<script>
  var controlledVocabMap = <%= raw(@controlled_vocab_map.to_json) %>;
</script>
