<div id="content" class="span12">
  <h2>Digital Asset Ingestion</h2>

<p><%= link_to "Start from scratch", new_ingest_path %></p>

<p>Or pick a template below:</p>

<table class="table table-striped table-bordered table-condensed">
  <caption class="sr-only">Available Templates</caption>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Set</th>
    </tr>
  </thead>

  <tbody>
    <% for template in @templates %>
      <tr>
        <td>
          <a href="<%= new_ingest_path(template_id: template.id) %>">
            <span class="sr-only">Ingest using</span>
            <%= template.title %>
          </a>
        </td>
        <td><%= template.set %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>